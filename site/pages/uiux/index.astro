---
import BaseLayout from "@site-ui/root-layout.astro";
import ListLayout from "@site-ui/list-layout.astro";
import Filter from "@site-ui/filter.astro";
import List from "@site-ui/list.astro";
import { getCollection } from "astro:content";
import { getEnv } from "@site/utils";
import { RouteKeyMap } from "../../types/routes";

const { isPrd, isUIUX } = getEnv();
const posts = isPrd || isUIUX ? await getCollection(RouteKeyMap.uiux) : [];
---

<BaseLayout title="UIUX" description="Pattern Recognition - UI/UX">
  <ListLayout>
    <Fragment slot="title"> UI/UX Patterns</Fragment>
    <Fragment slot="list">
      <Filter items={posts} />
      <List items={posts} />
    </Fragment>
  </ListLayout>
</BaseLayout>
