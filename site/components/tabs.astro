---
interface Props {
  tabs: string[];
  defaultTab?: number;
}

const { tabs = [] } = Astro.props;
---

<div class="tab-root not-prose">
  <div
    class:list={[
      "grid grid-flow-col auto-cols-fr",
      "bg-secondary-bg rounded-t",
      "border-b border-secondary",
    ]}
  >
    {
      tabs.map((tab, index) => (
        <div
          class:list={[
            `${tab}-tab-${index}`,
            "relative group",
            "w-full max-w-40 truncate",
            "has-checked:bg-theme/20 text-center",
            "transition-colors duration-300",
            "has-checked:border-b border-theme",
          ]}
        >
          <input
            id={tab}
            name={`tab-group`}
            type="radio"
            class={`tab-input-${index} peer hidden`}
            checked={index === 0}
          />
          <label
            for={tab}
            class:list={[
              "px-2 py-1",
              "text-start text-xs text-secondary",
              "sm:text-sm hover:text-theme",
              "peer-checked:text-theme cursor-pointer",
              "group-first:rounded-tl group-last:rounded-tr",
            ]}
          >
            {tab}
          </label>
        </div>
      ))
    }
  </div>
  <div
    class:list={[
      "relative",
      "w-full h-full min-h-64 md:min-h-80",
      "border-b border-x border-secondary-bg rounded-b",
      "not-prose",
      "overflow-y-hidden",
      "grid",
    ]}
  >
    <slot />
  </div>
</div>
